@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu - Chat App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        /* Re-using styles from Login.cshtml for consistency */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Nunito', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #a7f3d0 0%, #34d399 100%);
        }
        .login-container { max-width: 440px; width: 100%; padding: 20px; }
        .auth-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 50px 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .logo-section { text-align: center; margin-bottom: 35px; }
        .logo-icon { width: 70px; height: 70px; background: linear-gradient(135deg, #4ade80, #22c55e); border-radius: 20px; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 20px; box-shadow: 0 10px 30px rgba(34, 197, 94, 0.3); }
        .logo-icon svg { width: 40px; height: 40px; stroke: white; fill: none; stroke-width: 2; }
        .auth-card h2 { color: #1a1a1a; font-weight: 700; font-size: 28px; margin-bottom: 8px; }
        .auth-card p.subtitle { color: #6b7280; font-size: 14px; margin-bottom: 30px; }
        .form-group { margin-bottom: 24px; }
        .input-wrapper { position: relative; }
        .input-icon { position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: #9ca3af; }
        .form-control { width: 100%; padding: 14px 16px 14px 45px; border: 2px solid #e5e7eb; border-radius: 12px; font-size: 15px; background: #f9fafb; }
        .btn-primary { width: 100%; padding: 14px; background: linear-gradient(135deg, #4ade80, #22c55e); color: white; border: none; border-radius: 12px; font-weight: 600; font-size: 16px; cursor: pointer; box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3); margin-top: 10px; }
        .auth-footer { text-align: center; margin-top: 25px; }
        .auth-footer a { color: #22c55e; text-decoration: none; font-weight: 600; }
        .alert { padding: 15px; margin-top: 20px; border-radius: 12px; }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="auth-card">
            <div class="logo-section">
                <div class="logo-icon">
                     <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                     </svg>
                </div>
                <h2>Quên Mật Khẩu</h2>
                <p class="subtitle">Nhập email của bạn để nhận liên kết khôi phục mật khẩu.</p>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form action="@Url.Action("ForgotPassword", "Account")" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="email" name="email" class="form-control" placeholder="Email của bạn" required />
                        <span class="input-icon">
                           <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                           </svg>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn-primary">Gửi Liên Kết</button>
            </form>

            <div class="auth-footer">
                 <p><a href="@Url.Action("Login", "Account")">Quay lại Đăng nhập</a></p>
            </div>
        </div>
    </div>
</body>
</html>
