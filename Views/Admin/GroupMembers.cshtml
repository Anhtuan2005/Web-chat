@model IEnumerable<Online_chat.Models.User>
@{
    ViewBag.Title = "Thành viên nhóm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Thành viên nhóm: @ViewBag.GroupName</h1>
    <p class="page-subtitle">Danh sách người dùng đã gửi tin nhắn trong nhóm này</p>
</div>

<div class="content-card">
    <div class="content-card-header">
        <h5 class="content-card-title">
            <i class="fas fa-users me-2"></i>
            @Model.Count() thành viên
        </h5>
        <a href="@Url.Action("ManageGroups")" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="content-card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">Chưa có thành viên</h4>
                <p class="text-muted">Chưa có ai gửi tin nhắn trong nhóm này.</p>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var user in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-shadow" style="transition: all 0.3s;">
                            <div class="card-body d-flex align-items-center">
                                <img src="@(user.AvatarUrl ?? "/Content/default-avatar.png")"
                                     class="rounded-circle me-3"
                                     style="width: 60px; height: 60px; object-fit: cover; border: 3px solid #e9ecef;">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-bold">@user.DisplayName</h6>
                                    <p class="mb-0 text-muted small">
                                        <i class="fas fa-user-circle me-1"></i>
                                        @user.Username
                                    </p>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-danger mt-1">
                                            <i class="fas fa-crown me-1"></i>Admin
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="fas fa-edit me-1"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>