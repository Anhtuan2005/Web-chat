@model IEnumerable<Online_chat.Models.Message>

@{
    ViewBag.Title = "Quản lý Tin nhắn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>Hiển thị 100 tin nhắn mới nhất.</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 15%;">Người gửi</th>
            <th>Nội dung tin nhắn</th>
            <th style="width: 15%;">Nhóm</th>
            <th style="width: 18%;">Thời gian gửi</th>
            <th style="width: 10%;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Sender.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                <td>@Html.DisplayFor(modelItem => item.Group.GroupName)</td>
                <td>@item.Timestamp.ToLocalTime()</td>
                <td>
                    @using (Html.BeginForm("DeleteMessage", "Admin", new { id = item.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa tin nhắn này?');">
                            <i class="fas fa-trash"></i> Xóa
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>