@model IEnumerable<Online_chat.Models.AdminConversationViewModel>

@{
    ViewBag.Title = "Quản lý Hội thoại Riêng tư";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-comments me-2"></i>
        Quản lý Hội thoại Riêng tư
    </h1>
    <p class="page-subtitle">Giám sát và quản lý các cuộc trò chuyện private giữa các user</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="content-card">
    <div class="content-card-header">
        <h5 class="content-card-title">
            <i class="fas fa-filter me-2"></i>
            Tìm kiếm hội thoại
        </h5>
    </div>

    <!-- BỘ LỌC -->
    <div class="content-card-body border-bottom">
        @using (Html.BeginForm("ManagePrivateMessages", "Admin", FormMethod.Get))
        {
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label">
                        <i class="fas fa-search me-1"></i>Tìm theo Username hoặc Tên hiển thị
                    </label>
                    <input type="text" name="search" value="@ViewBag.SearchQuery"
                           class="form-control"
                           placeholder="Nhập username hoặc tên..." />
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                    <a href="@Url.Action("ManagePrivateMessages")" class="btn btn-secondary">
                        <i class="fas fa-redo me-2"></i>Đặt lại
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- BẢNG HỘI THOẠI -->
    <div class="content-card-body">
         <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Người tham gia</th>
                        <th>Tin nhắn cuối</th>
                        <th class="text-center">Tổng tin nhắn</th>
                        <th>Cập nhật lần cuối</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var conv in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-group">
                                            <img src="@(conv.User1.AvatarUrl ?? "/Content/default-avatar.png")" class="avatar-stacked" alt="@conv.User1.Username" title="@conv.User1.Username" />
                                            <img src="@(conv.User2.AvatarUrl ?? "/Content/default-avatar.png")" class="avatar-stacked" alt="@conv.User2.Username" title="@conv.User2.Username" />
                                        </div>
                                        <div class="ms-2">
                                            <strong>@conv.User1.Username</strong>
                                            <i class="fas fa-exchange-alt mx-1 text-muted"></i>
                                            <strong>@conv.User2.Username</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@conv.LastMessageContent">
                                        @conv.LastMessageContent
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@conv.MessageCount</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @conv.LastMessageTimestamp.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("ConversationDetails", new { user1Id = conv.User1.Id, user2Id = conv.User2.Id })"
                                       class="btn btn-sm btn-info"
                                       title="Xem chi tiết hội thoại">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Không có cuộc trò chuyện nào.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .avatar-group {
        display: flex;
        padding-left: 10px;
    }
    .avatar-stacked {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        margin-left: -10px;
    }
</style>