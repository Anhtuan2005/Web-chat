@model IEnumerable<Online_chat.Models.User>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Quản lý người dùng</h1>
    <p class="page-subtitle">Tìm kiếm, chỉnh sửa và quản lý tất cả người dùng</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="content-card">
    <div class="content-card-header">
        <h5 class="content-card-title">
            <i class="fas fa-users me-2"></i>
            Danh sách người dùng
        </h5>
        <div class="d-flex gap-2">
            <a href="@Url.Action("BannedUsers")" class="btn btn-warning">
                <i class="fas fa-ban me-2"></i>
                User bị khóa
            </a>
        </div>
    </div>

    <!-- TÌM KIẾM -->
    <div class="content-card-body border-bottom">
        <form method="get" action="@Url.Action("ManageUsers")" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control"
                       placeholder="Tìm kiếm theo Username, Email hoặc Tên hiển thị..."
                       value="@ViewBag.SearchQuery">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i>Tìm kiếm
                </button>
            </div>
        </form>
    </div>

    <!-- BẢNG DANH SÁCH -->
    <div class="content-card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width: 50px;">ID</th>
                        <th>Username</th>
                        <th>Tên hiển thị</th>
                        <th>Email</th>
                        <th style="width: 100px;" class="text-center">Quyền</th>
                        <th style="width: 150px;" class="text-center">Ngày tạo</th>
                        <th style="width: 180px;" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>#@user.Id</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(user.AvatarUrl ?? "/Content/default-avatar.png")"
                                         class="rounded-circle me-2"
                                         style="width: 32px; height: 32px; object-fit: cover;">
                                    <strong>@user.Username</strong>
                                </div>
                            </td>
                            <td>@user.DisplayName</td>
                            <td>
                                <small class="text-muted">
                                    <i class="fas fa-envelope me-1"></i>
                                    @user.Email
                                </small>
                            </td>
                            <td class="text-center">
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-crown me-1"></i>Admin
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td class="text-center">
                                <small class="text-muted">@user.CreatedAt.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <!-- Nút Sửa -->
                                    <a href="@Url.Action("EditUser", new { id = user.Id })"
                                       class="btn btn-sm btn-warning"
                                       title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <!-- Nút Ban (Đã sửa lại để mở Modal) -->
                                    @if (!user.IsAdmin) // Không cho phép ban Admin
                                    {
                                        <button class="btn btn-sm btn-danger open-ban-modal"
                                                data-id="@user.Id"
                                                data-username="@user.Username"
                                                title="Khóa tài khoản">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PHÂN TRANG -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("ManageUsers", new { page = i, search = ViewBag.SearchQuery })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

<!-- ========================================== -->
<!-- MODAL CHỌN THỜI GIAN BAN (Đặt ở cuối file) -->
<!-- ========================================== -->
<div class="modal fade" id="banUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-user-lock me-2"></i>Khóa tài khoản</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Token chống giả mạo cho Ajax -->
                @Html.AntiForgeryToken()

                <p>Bạn đang khóa tài khoản: <strong id="banUsernameDisplay" class="text-danger">...</strong></p>
                <input type="hidden" id="banUserIdVal" />

                <label class="form-label fw-bold mt-2">Chọn thời gian khóa:</label>
                <div class="d-flex flex-column gap-2">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="banDuration" id="ban1" value="1" checked>
                        <label class="btn btn-outline-danger" for="ban1">1 Ngày</label>

                        <input type="radio" class="btn-check" name="banDuration" id="ban7" value="7">
                        <label class="btn btn-outline-danger" for="ban7">7 Ngày</label>

                        <input type="radio" class="btn-check" name="banDuration" id="ban15" value="15">
                        <label class="btn btn-outline-danger" for="ban15">15 Ngày</label>
                    </div>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="banDuration" id="ban30" value="30">
                        <label class="btn btn-outline-danger" for="ban30">30 Ngày</label>

                        <input type="radio" class="btn-check" name="banDuration" id="ban90" value="90">
                        <label class="btn btn-outline-danger" for="ban90">90 Ngày</label>

                        <input type="radio" class="btn-check" name="banDuration" id="ban36500" value="36500">
                        <label class="btn btn-outline-danger" for="ban36500">Vĩnh viễn</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmBanBtn">
                    <i class="fas fa-lock me-1"></i> Xác nhận khóa
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // 1. Sự kiện khi nhấn nút Ban (Hình tròn đỏ) trên bảng
            $('.open-ban-modal').click(function () {
                var userId = $(this).data('id');
                var username = $(this).data('username');

                $('#banUserIdVal').val(userId);
                $('#banUsernameDisplay').text(username);

                // Hiển thị modal
                var myModal = new bootstrap.Modal(document.getElementById('banUserModal'));
                myModal.show();
            });

            $('#confirmBanBtn').click(function () {
                var userId = $('#banUserIdVal').val();
                var days = $('input[name="banDuration"]:checked').val();
                var token = $('input[name="__RequestVerificationToken"]').val(); // Lấy token

                // Hiệu ứng loading nút bấm
                var $btn = $(this);
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

                $.ajax({
                    url: '@Url.Action("BanUser", "Admin")', // Gọi về AdminController
                    type: 'POST',
                    data: {
                        userId: userId,
                        days: days,
                        __RequestVerificationToken: token
                    },
                    success: function (res) {
                        if (res.success) {
                            alert(res.message);
                            location.reload(); // Tải lại trang để cập nhật
                        } else {
                            alert(res.message);
                            $btn.prop('disabled', false).html('<i class="fas fa-lock me-1"></i> Xác nhận khóa');
                        }
                    },
                    error: function () {
                        alert("Lỗi kết nối đến máy chủ.");
                        $btn.prop('disabled', false).html('<i class="fas fa-lock me-1"></i> Xác nhận khóa');
                    }
                });
            });
        });
    </script>
}