            min-height: 150px;
            border: none;
            outline: none;
            font-size: 16px;
            color: #050505;
            resize: vertical;
            font-family: inherit;
            line-height: 1.5;
        }

            textarea::placeholder {
                color: #b0b3b8;
            }

        .media-preview {
            margin-top: 20px;
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            display: none;
            background: #f0f2f5;
        }

            .media-preview.active {
                display: block;
            }

            .media-preview img,
            .media-preview video {
                width: 100%;
