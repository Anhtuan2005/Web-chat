            border-bottom: 1px solid #e4e6eb;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: linear-gradient(135deg, #66bb6a 0%, #4caf50 100%);
            color: white;
        }

            .create-header h2 {
                font-size: 24px;
                font-weight: 700;
                margin: 0;
            }

        .close-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            font-size: 20px;
        }

            .close-btn:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: rotate(90deg);
            }

        .user-section {
            padding: 20px 28px;
            display: flex;
            align-items: center;
            gap: 14px;
            border-bottom: 1px solid #e4e6eb;
        }

        .user-avatar {
            width: 52px;
            height: 52px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #4caf50;
        }

        .user-info h4 {
            font-size: 16px;
            font-weight: 600;
            color: #050505;
            margin-bottom: 6px;
        }

        .privacy-select {
            padding: 6px 14px;
            border-radius: 8px;
            background: #e4e6eb;
            border: none;
            font-size: 14px;
            color: #65676b;
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: 500;
        }

            .privacy-select:hover {
                background: #d8dadf;
            }

        .post-type-tabs {
            display: flex;
            padding: 20px 28px;
            gap: 10px;
            border-bottom: 1px solid #e4e6eb;
            overflow-x: auto;
            scrollbar-width: none; 
            -ms-overflow-style: none;
        }

            .post-type-tabs::-webkit-scrollbar {
                display: none; 
            }

        .post-type-tab {
