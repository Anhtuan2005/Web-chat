@section scripts {
    <script>
    $(document).ready(function () {
        $('main.chat-area').addClass('feed-mode');

        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        var page = 1;
        var isLoading = false;
        var hasMorePosts = true;
        var currentPostToShare = null;

        // Infinite scroll
        $('.chat-area').scroll(function () {
            var chatArea = $(this);
            if (chatArea.scrollTop() + chatArea.height() >= $('#post-list-container').height() - 200 && !isLoading && hasMorePosts) {
                loadMorePosts();
            }
        });

        function loadMorePosts() {
            isLoading = true;
            $('#loading-more').show();
            page++;

            $.ajax({
                url: '@Url.Action("GetPosts", "Feed")',
                type: 'GET',
                data: { page: page },
                success: function (data) {
                    if (data.trim().length > 0) {
                        $('#post-list-container').append(data);
                    } else {
                        hasMorePosts = false;
                    }
                },
                error: function () {
                    console.error("Failed to load more posts.");
                },
                complete: function () {
                    isLoading = false;
                    $('#loading-more').hide();
                }
            });
        }

