@model Online_chat.Models.FriendshipPageViewModel
@{
    ViewBag.Title = "Quản lý Bạn bè";
    Layout = "~/Views/Shared/_ChatLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .friend-content-area {
        padding: 24px;
        height: 100%;
        overflow-y: auto;
        background: linear-gradient(135deg, #f0f9f4 0%, #ffffff 100%);
    }

    .friend-content-area::-webkit-scrollbar {
        width: 6px;
    }

    .friend-content-area::-webkit-scrollbar-track {
        background: transparent;
    }

    .friend-content-area::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, #66bb6a, #43a047);
        border-radius: 10px;
    }

    /* Header Section */
    .page-header {
        background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
        border-radius: 20px;
        padding: 28px 32px;
        margin-bottom: 24px;
        box-shadow: 0 8px 24px rgba(46, 125, 50, 0.2);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        font-weight: 700;
        color: white;
        margin: 0;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-title i {
        font-size: 1.6rem;
    }

    .btn-friend-requests {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        font-weight: 600;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-friend-requests:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        color: white;
    }

    .btn-friend-requests .badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: linear-gradient(135deg, #ff5252, #f44336);
        color: white;
        border-radius: 50%;
        padding: 5px 8px;
        font-size: 0.7rem;
        font-weight: 700;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(255, 82, 82, 0.4);
    }

    /* Search Section */
    .section-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(67, 160, 71, 0.1);
        transition: all 0.3s ease;
    }

    .section-card:hover {
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
    }

    .section-heading {
        color: #2e7d32;
        margin-bottom: 20px;
        font-weight: 700;
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-heading i {
        color: #43a047;
    }

    .search-form {
        display: flex;
        gap: 12px;
    }

        .search-form input {                                                                                  
            flex: 1;                                                                                          
            background: #f8fdf9;                                                                              
            border: 2px solid #c8e6c9;                                                                        
            border-radius: 12px;                                                                              
            padding: 12px 18px;                                                                               
            transition: all 0.3s ease;                                                                        
            font-size: 0.95rem;
            color: #000; /* Changed text color to black for better readability */    }

        .search-form input:focus {                                                                            
            border-color: #43a047;                                                                            
            box-shadow: 0 0 0 4px rgba(67, 160, 71, 0.1);                                                     
            outline: none;                                                                                    
            background: white;
            color: #000; /* Ensure text color is black on focus */    }

    .btn-action {
        border-radius: 8px;
        padding: 8px 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        font-size: 0.9rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(67, 160, 71, 0.3);
    }

    /* Friend Cards */
    .friend-card {
        background: white;
        border: 1px solid #e8f5e9;
        border-radius: 16px;
        padding: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .friend-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #66bb6a, #43a047, #2e7d32);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .friend-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(46, 125, 50, 0.15);
        border-color: #c8e6c9;
    }

    .friend-card:hover::before {
        transform: scaleX(1);
    }

    .friend-card-body {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 0;
    }

    .friend-avatar-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid #e8f5e9;
        flex-shrink: 0;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }

    .friend-avatar-wrapper::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(67, 160, 71, 0.2), rgba(46, 125, 50, 0.2));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .friend-avatar-wrapper:hover {
        transform: scale(1.1);
        border-color: #43a047;
    }

    .friend-avatar-wrapper:hover::after {
        opacity: 1;
    }

    .friend-avatar {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .friend-card-name {
        font-weight: 700;
        color: #1b5e20;
        font-size: 1.1rem;
        margin-bottom: 4px;
    }

    .friend-card-username {
        color: #66bb6a;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .friend-card-info {
        flex: 1;
        min-width: 0;
    }

    .friend-card-actions {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-shrink: 0;
        min-width: fit-content;
    }

    .friend-card-actions .btn-action {
        min-width: 110px;
        white-space: nowrap;
        padding: 7px 14px;
        font-size: 0.85rem;
    }

    .btn-action.btn-light {
        background: #ffebee;
        color: #c62828;
        border: 1px solid #ef9a9a;
        font-weight: 500;
    }

    .btn-action.btn-light:hover {
        background: #ffcdd2;
        border-color: #e57373;
        color: #b71c1c;
    }

    /* Modal Styles */
    .modal-content {
        background: white;
        border-radius: 20px;
        border: none;
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
        color: white;
        border: none;
        padding: 20px 24px;
    }

    .modal-title {
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-header .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.9;
    }

    .modal-header .btn-close:hover {
        opacity: 1;
    }

    .modal-body {
        padding: 24px;
    }

    .modal-body .list-group-item {
        background: #f8fdf9;
        border: 1px solid #e8f5e9;
        border-radius: 12px;
        margin-bottom: 12px;
        padding: 16px;
        transition: all 0.2s ease;
    }

    .modal-body .list-group-item:hover {
        background: #e8f5e9;
        transform: translateX(4px);
    }

    .btn-action-friend {
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 500;
        border: none;
        transition: all 0.2s ease;
    }

    .btn-accept {
        background: linear-gradient(135deg, #81c784, #66bb6a);
        color: white;
    }

    .btn-accept:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 187, 106, 0.3);
    }

    .btn-decline {
        background: #f5f5f5;
        color: #757575;
    }

    .btn-decline:hover {
        background: #e0e0e0;
    }

    /* Alert Styles */
    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
        font-weight: 500;
    }

    .alert-success {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
        color: #2e7d32;
    }

    .alert-warning {
        background: linear-gradient(135deg, #fff9c4, #fff59d);
        color: #f57f17;
    }

    /* User Profile Modal */
    #profile-modal .modal-content {
        border-radius: 24px;
        overflow: hidden;
    }

    #profile-modal-cover {
        height: 180px;
        background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
        background-size: cover;
        background-position: center;
        position: relative;
    }

    #profile-modal-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 5px solid white;
        object-fit: cover;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    #profile-modal .modal-body {
        padding: 70px 32px 32px;
    }

    #profile-modal-name {
        font-weight: 700;
        color: #1b5e20;
        margin: 12px 0 4px;
        font-size: 1.5rem;
    }

    #profile-modal-username {
        color: #66bb6a;
        font-weight: 600;
        margin-bottom: 16px;
    }

    #profile-modal-bio {
        color: #555;
        line-height: 1.6;
        margin-bottom: 24px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 12px 16px;
        background: #f8fdf9;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .info-grid i {
        color: #43a047;
        font-size: 1.1rem;
    }

    .info-grid span {
        color: #333;
        font-weight: 500;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 48px 24px;
        color: #9e9e9e;
    }

    .empty-state i {
        font-size: 4rem;
        color: #c8e6c9;
        margin-bottom: 16px;
    }

    .empty-state p {
        font-size: 1.1rem;
        font-weight: 500;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 16px;
            text-align: center;
        }

        .search-form {
            flex-direction: column;
        }

        .friend-card {
            flex-direction: column;
            align-items: stretch;
        }

        .friend-card-body {
            margin-bottom: 16px;
        }

        .friend-card-actions {
            width: 100%;
        }

        .friend-card-actions .btn-action {
            flex: 1;
            min-width: auto;
        }
    }
</style>

<!-- Friend Requests Modal --><div class="modal fade" id="friendRequestsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-plus"></i> Lời mời kết bạn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.PendingRequests.Any())
                {
                    <ul class="list-group">
                        @foreach (var req in Model.PendingRequests)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong style="color: #1b5e20;">@req.SenderDisplayName</strong>
                                    <div style="color: #66bb6a; font-size: 0.9rem;">@@@req.SenderUsername</div>
                                </div>
                                <div style="display: flex; gap: 8px;">
                                    @using (Html.BeginForm("AcceptRequest", "Friend", new { friendshipId = req.FriendshipId }, FormMethod.Post, new { @style = "display:inline-block;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action-friend btn-accept">
                                            <i class="fas fa-check me-1"></i> Chấp nhận
                                        </button>
                                    }
                                    @using (Html.BeginForm("DeclineOrRemoveFriend", "Friend", new { friendshipId = req.FriendshipId }, FormMethod.Post, new { @style = "display:inline-block;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action-friend btn-decline">
                                            <i class="fas fa-times me-1"></i> Từ chối
                                        </button>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <p>Bạn không có lời mời kết bạn nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="friend-content-area">
    <!-- Header -->
    <div class="page-header">
        <h2 class="page-title">
            <i class="fas fa-users"></i>
            @ViewBag.Title
        </h2>
        <button type="button" class="btn btn-friend-requests" data-bs-toggle="modal" data-bs-target="#friendRequestsModal">
            <i class="fas fa-bell"></i>
            <span>Lời mời kết bạn</span>
            @if (Model.PendingRequests.Count > 0)
            {
                <span class="badge">@Model.PendingRequests.Count</span>
            }
        </button>
    </div>

    <!-- Search Section -->
    <div class="section-card">
        <h4 class="section-heading">
            <i class="fas fa-search"></i>
            Tìm kiếm bạn bè
        </h4>
        @using (Html.BeginForm("Search", "Friend", FormMethod.Get, new { @class = "search-form" }))
        {
            <input type="text" name="searchTerm" class="form-control" placeholder="Nhập số điện thoại hoặc ID người dùng..." />
            <button type="submit" class="btn btn-action btn-primary">
                <i class="fas fa-search me-1"></i> Tìm kiếm
            </button>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Friend List Section -->
    <div class="section-card">
        <h3 class="section-heading">
            <i class="fas fa-user-friends"></i>
            Danh sách bạn bè (@Model.Friends.Count)
        </h3>
        <div class="row">
            @if (!Model.Friends.Any())
            {
                <div class="col-12">
                    <div class="empty-state">
                        <i class="fas fa-user-friends"></i>
                        <p>Bạn chưa có người bạn nào. Hãy tìm kiếm và kết nối!</p>
                    </div>
                </div>
            }
            else
            {
                foreach (var friend in Model.Friends)
                {
                    <div class="col-12 mb-3">
                        <div class="friend-card">
                            <div class="friend-card-body">
                                <div class="friend-avatar-wrapper user-avatar-trigger" data-userid="@friend.FriendId">
                                    <img src="@Url.Content(friend.FriendAvatarUrl ?? "/Content/default-avatar.png")" class="friend-avatar" />
                                </div>
                                <div class="friend-card-info">
                                    <div class="friend-card-name">@friend.FriendDisplayName</div>
                                    <div class="friend-card-username">@@@friend.FriendUsername</div>
                                </div>
                            </div>
                            <div class="friend-card-actions">
                                <a href="@Url.Action("Index", "Chat", new { friendUsername = friend.FriendUsername })" class="btn btn-sm btn-action btn-primary">
                                    <i class="fas fa-comment-dots me-1"></i> Nhắn tin
                                </a>
                                @using (Html.BeginForm("DeclineOrRemoveFriend", "Friend", new { friendshipId = friend.FriendshipId }, FormMethod.Post, new { @style = "margin: 0;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-action btn-light" onclick="return confirm('Bạn có chắc muốn hủy kết bạn với @friend.FriendUsername?');">
                                        <i class="fas fa-user-minus me-1"></i> Hủy kết bạn
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- People You May Know Section -->
    <div class="section-card">
        <h3 class="section-heading">
            <i class="fas fa-user-plus"></i>
            Gợi ý kết bạn
        </h3>
        <div id="friend-suggestions-list" class="row">
            <div class="col-12">
                <div class="empty-state">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Đang tải gợi ý...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            function loadFriendSuggestions() {
                const suggestionsContainer = $('#friend-suggestions-list');
                $.ajax({
                    url: '@Url.Action("GetFriendSuggestions", "Friend")',
                    type: 'GET',
                    success: function (response) {
                        suggestionsContainer.empty();
                        if (response.success && response.suggestions.length > 0) {
                            response.suggestions.forEach(function (user) {
                                const suggestionHtml = `
                                    <div class="col-12 mb-3 suggestion-card" id="suggestion-${user.Id}">
                                        <div class="friend-card">
                                            <div class="friend-card-body">
                                                <div class="friend-avatar-wrapper user-avatar-trigger" data-userid="${user.Id}">
                                                    <img src="${user.AvatarUrl}" class="friend-avatar" />
                                                </div>
                                                <div class="friend-card-info">
                                                    <div class="friend-card-name">${user.DisplayName}</div>
                                                                                                        <div class="friend-card-username">@@${user.Username}</di
                                                    v>
                                                </div>
                                            </div>
                                            <div class="friend-card-actions">
                                                <button class="btn btn-sm btn-action btn-primary btn-add-friend" data-userid="${user.Id}">
                                                    <i class="fas fa-user-plus me-1"></i> Thêm bạn
                                                </button>
                                                <button class="btn btn-sm btn-action btn-light btn-remove-suggestion" data-userid="${user.Id}">
                                                    <i class="fas fa-times me-1"></i> Xóa
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                `;
                                suggestionsContainer.append(suggestionHtml);
                            });
                        } else {
                            suggestionsContainer.html(`
                                <div class="col-12">
                                    <div class="empty-state">
                                        <i class="fas fa-user-friends"></i>
                                        <p>Không có gợi ý nào.</p>
                                    </div>
                                </div>
                            `);
                        }
                    },
                    error: function () {
                        suggestionsContainer.html(`
                            <div class="col-12">
                                <div class="empty-state">
                                    <i class="fas fa-exclamation-triangle" style="color: #f44336;"></i>
                                    <p style="color: #f44336;">Lỗi khi tải gợi ý.</p>
                                </div>
                            </div>
                        `);
                    }
                });
            }

            loadFriendSuggestions();

            $('#friend-suggestions-list').on('click', '.btn-add-friend', function () {
                const $btn = $(this);
                const userId = $btn.data('userid');
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i> Đang gửi...');
                $.ajax({
                    url: '@Url.Action("SendRequest", "Friend")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        receiverId: userId
                    },
                    success: function (response) {
                        if (response.success) {
                            $btn.removeClass('btn-primary').addClass('btn-success').html('<i class="fas fa-check me-1"></i> Đã gửi');
                            $btn.closest('.friend-card-actions').find('.btn-remove-suggestion').prop('disabled', true);
                        } else {
                            $btn.prop('disabled', false).removeClass('btn-primary').addClass('btn-danger').html('<i class="fas fa-exclamation me-1"></i> Lỗi');
                        }
                    },
                    error: function () {
                        $btn.prop('disabled', false).removeClass('btn-primary').addClass('btn-danger').html('<i class="fas fa-exclamation me-1"></i> Lỗi');
                    }
                });
            });

            $('#friend-suggestions-list').on('click', '.btn-remove-suggestion', function () {
                $(this).closest('.suggestion-card').fadeOut(400, function() { $(this).remove(); });
            });
        });
    </script>
}