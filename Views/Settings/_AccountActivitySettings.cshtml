        <div class="activity-list">
            @foreach (var activity in Model)
            {
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas @(GetIconForActivity(activity.ActivityType))"></i>
                    </div>
                    <div class="activity-details">
                        <strong>@activity.Description</strong>
                        <p>@activity.Timestamp.ToString("g") - IP: @activity.IpAddress</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public static string GetIconForActivity(string activityType)
    {
        switch (activityType)
        {
            case "Login":
                return "fa-sign-in-alt";
            case "Logout":
                return "fa-sign-out-alt";
            case "ChangePassword":
                return "fa-key";
            default:
                return "fa-info-circle";
        }
    }
}

