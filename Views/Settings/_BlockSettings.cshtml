@model IEnumerable<Online_chat.Models.BlockedUser>
@*
    This view displays a list of users that the current user has blocked.
    It provides a button to unblock each user, which triggers an AJAX call.
*@

<div class="settings-card">
    <div class="settings-header">
        Quản lý danh sách chặn
    </div>
    <div class="settings-body">
        <p style="color: black;">Đây là những người bạn đã chặn. Họ không thể gửi tin nhắn cho bạn.</p>
        <hr />
        <div id="blocked-users-list">
            @if (Model.Any())
            {
                foreach (var blockedUser in Model)
                {
                    <div class="settings-item" id="blocked-user-@blockedUser.BlockedId">
                        <div class="settings-item-label" style="color: black;">
                            <strong>@blockedUser.Blocked.FullName</strong>
                            <span>(@blockedUser.Blocked.Username)</span>
                        </div>
                        <button class="btn btn-sm btn-outline-danger unblock-user-btn" data-userid="@blockedUser.BlockedId">Bỏ chặn</button>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Bạn chưa chặn người dùng nào.</p>
            }
        </div>
    </div>
</div>


