@*
    This view provides a form for users to change their password.
    It includes fields for the old password, new password, and confirmation password.
    It also displays success or error messages passed via TempData.
*@

<div class="settings-card">
    <div class="settings-header">
        Tài khoản & Bảo mật
    </div>
    <div class="settings-body">
        <h5 class="card-title">Đổi mật khẩu</h5>
        <hr />

        <div id="password-message-placeholder"></div>

        @using (Html.BeginForm("ChangePassword", "Settings", FormMethod.Post, new { @id = "changePasswordForm", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label for="oldPassword">Mật khẩu cũ</label>
                <input type="password" id="oldPassword" name="oldPassword" class="form-control" required>
            </div>

            <div class="form-group mb-3">
                <label for="newPassword">Mật khẩu mới</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required>
            </div>

            <div class="form-group mb-3">
                <label for="confirmPassword">Xác nhận mật khẩu mới</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-save-password">Lưu thay đổi</button>
            </div>
        }
    </div>
</div>


